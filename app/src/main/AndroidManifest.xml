<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">
    <uses-permission android:name="android.permission.INTERNET"/>

    <queries>
        <intent>
            <action android:name="com.google.android.youtube.api.service.START"/>
        </intent>
    </queries>

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/HomeTheme"
        tools:targetApi="31">
        <activity
            android:name=".authantication.SignUp_Activity"
            android:exported="false" />
        <activity
            android:name=".authantication.LoginActivity"
            android:exported="false" />
        <activity
            android:name=".app_activities.HomeActivity"
            android:exported="true"
            android:theme="@style/HomeTheme" />
        <activity
            android:name=".app_activities.OnboardingActivity"
            android:exported="true"
            android:theme="@style/HomeTheme" />
        <activity
            android:name=".app_activities.SplashActivity"
            android:exported="true"
            android:theme="@style/HomeTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>