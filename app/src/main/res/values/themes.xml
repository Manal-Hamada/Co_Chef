<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.FoodPlanner_App" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/dark_purple</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/primary</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="textInputLayoutStyle" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense">
        <item name="boxStrokeColor">@color/main_color</item>
        <item name="boxStrokeWidth">1dp</item>
    </style>

    <style name="button_main_color" parent="Widget.Material3.Button">
        <item name="android:backgroundTint">@color/main_color</item>
        <item name="cornerRadius">12dp</item>
    </style>
    <style name="HomeTheme" parent="Theme.MaterialComponents.DayNight.NoActionBar">        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/Secondary</item>
        <item name="colorAccent">@color/dark_purple</item>
    </style>

    <style name="Theme.FoodPlanner_App.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>


    <style name="Theme.FoodPlanner_App.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.FoodPlanner_App.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
</resources>